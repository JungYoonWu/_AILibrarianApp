<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ai_librarian">

    <!-- 카메라 사용 권한: 책장 사진을 촬영하기 위해 필요 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 외부 저장소 읽기 권한: 저장된 이미지 파일을 불러오기 위해 필요 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 외부 저장소 쓰기 권한: 촬영한 이미지를 저장하기 위해 필요 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Android 13(API 33) 이상: 사진 전용 읽기 권한 추가 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" /> <!-- 변경점 -->
    <!-- 인터넷 사용 권한: Flask/FastAPI 등의 서버에 OCR 요청을 전송하기 위해 필요 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 카메라 권한 선언 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <!-- 카메라 하드웨어 사용 명시 -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AI_Librarian"
        tools:targetApi="31">

        <!-- 앱 실행 시 가장 먼저 시작되는 액티비티 정의 -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <!-- 메인 액션: 앱 런처에서 실행될 수 있게 지정 -->
                <action android:name="android.intent.action.MAIN" />

                <!-- 런처 카테고리: 홈 화면에 아이콘 표시를 가능하게 함 -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ResultActivity" />
        <activity
            android:name=".ShelfRegistrationActivity"
            android:exported="false" />
        <activity android:name=".CorrectionActivity" />
    </application>

</manifest>
